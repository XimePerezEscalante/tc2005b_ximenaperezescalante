<div class="col-4 align-items-center text-center bg-tertiary-rgb rounded">
    
        <p class="text-light fw-bolder fs-1">Editar</p>
        <% for (let cancion of canciones){ %>
            <p class="mb-5 text-light fw-bold fst-italic fs-3"> <%= cancion.nombre %> de <%= cancion.artista %>
            </p>
    
            <form action="/EditarCancion/<%= cancion.id %>" method="POST">
                <div class="row">
                    <div class="input-group mb-3 d-inline-flex p-3">
                        <span class="input-group-text bg-dark text-light" id="basic-addon1">Nombre</span>
                        <input type="text" class="form-control bg-dark-subtle" name="newsongname" aria-label="songname"
                                aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="row">
                    <div class="input-group mb-3 d-inline-flex p-3">
                        <span class="input-group-text bg-dark text-light"" id="basic-addon1">Artista</span>
                        <input type="text" class="form-control bg-dark-subtle" name="newartist" aria-label="artist"
                                aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3">
                        <button type="submit" class="btn btn-outline-light mb-3">Confirmar cambios</button>
                    </div>
                </div>
            </form>
        <%}%>
</div>
</div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>